@model NutriPlan.Models.Intake

@{
    ViewData["Title"] = "Delete Intake";
}

<h1>Delete Intake</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Intake</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Food Item</dt>
        <dd class="col-sm-10">@Model.FoodItem</dd>
        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Model.Calories</dd>
        <dt class="col-sm-2">Protein</dt>
        <dd class="col-sm-10">@Model.Protein</dd>
        <dt class="col-sm-2">Carbohydrates</dt>
        <dd class="col-sm-10">@Model.Carbohydrates</dd>
        <dt class="col-sm-2">Fat</dt>
        <dd class="col-sm-10">@Model.Fat</dd>
        <dt class="col-sm-2">User Profile</dt>
        <dd class="col-sm-10">@Model.UserProfile?.FullName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
