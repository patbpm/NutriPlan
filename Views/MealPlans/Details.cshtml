@model NutriPlan.ViewModels.MealPlanViewModel

@{
    ViewData["Title"] = "Meal Plan Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>MealPlan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
        <dt class="col-sm-2">User Profile</dt>
        <dd class="col-sm-10">@Model.UserProfileName</dd>
    </dl>
</div>

<h4>Meals</h4>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>DateTime</th>
            <th>Description</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var meal in Model.Meals)
    {
        <tr>
            <td>@meal.Name</td>
            <td>@meal.DateTime</td>
            <td>@meal.Description</td>
            <td>@meal.Calories</td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</p>
