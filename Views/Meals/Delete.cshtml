@model NutriPlan.ViewModels.MealViewModel

@{
    ViewData["Title"] = "Delete Meal";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Meal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">DateTime</dt>
        <dd class="col-sm-10">@Model.DateTime</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Model.Calories</dd>
        <dt class="col-sm-2">Meal Plan</dt>
        <dd class="col-sm-10">@Model.MealPlanId</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
