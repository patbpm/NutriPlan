@model NutriPlan.ViewModels.MealViewModel

@{
    ViewData["Title"] = "Meal Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Meal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">DateTime</dt>
        <dd class="col-sm-10">@Model.DateTime</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Model.Calories</dd>
        <dt class="col-sm-2">Meal Plan</dt>
        <dd class="col-sm-10">@Model.MealPlanId</dd>
    </dl>
</div>

<p>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</p>
