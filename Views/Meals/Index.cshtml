@model IEnumerable<NutriPlan.ViewModels.MealViewModel>

@{
    ViewData["Title"] = "Meals";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Meal</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>DateTime</th>
            <th>Description</th>
            <th>Calories</th>
            <th>Meal Plan</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.DateTime</td>
            <td>@item.Description</td>
            <td>@item.Calories</td>
            <td>@item.MealPlanId</td>
            <td>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
